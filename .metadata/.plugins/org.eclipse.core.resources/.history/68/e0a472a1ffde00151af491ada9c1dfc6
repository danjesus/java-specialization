public class Principal {

	public static void main(String[] args) {
		Paciente joao = new Paciente (1.50, 50.0);
		Paciente maria = new Paciente (1.78, 90.0);
		Paciente jose = new Paciente (2.00, 100.00);
		
		System.out.println("IMC foi: " + joao.calcularIMC() + " que corresponde " + joao.diagnostico());
		System.out.println("IMC foi: " + maria.calcularIMC() + " que corresponde " + maria.diagnostico());
		System.out.println("IMC foi: " + jose.calcularIMC() + " que corresponde " + jose.diagnostico());
	}

}
